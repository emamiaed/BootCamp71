@{
    ViewData["Title"] = "صفحه اعضا : ";
}
@model List<Member>
<div class="float-ent h2">
    لیست اعضا
</div>
<div class="float-start">
    <a class="btn btn-success" asp-controller="Members" asp-action="Create" >افزدون عضو جدید</a>
</div>
<table class="table table-hover table-light">
    <thead>
    <tr>
    <th>شناسه</th>
    <th>نام</th>
    <th>نام خانوادگی</th>
    <th>کد ملی</th>
    <th>تاریخ تولد</th>
    <th>نوع عضویت</th>
    <th>شماره تماس</th>
    <th>جنسیت</th>
    <th></th>
    </tr>
    </thead>
<tbody>
    @foreach(Member i in Model)
    {
        <tr>
            <td>@i.Id</td>
            <td>@i.FirstName</td>
            <td>@i.LastName</td>
            <td>@i.NationalCode</td>
            <td>@i.BirthDay.Day/@i.BirthDay.Month/@i.BirthDay.Year</td>
            <td>@i.MembershipType</td>
            <td>@i.PhoneNumber</td>
            <td>@i.Gender</td>
            <td>
                <a class="btn btn-info" asp-controller="Members" asp-action="Details" asp-route-id="@i.Id">مشاهده</a>
                <a class="btn btn-warning" asp-controller="Members" asp-action="Edit" asp-route-id="@i.Id"> ویرایش</a>
                <a class="btn btn-danger" asp-controller="Members"asp-action="Delete" asp-route-id="@i.Id">حذف</a>
            </td>
        </tr> 
    }
</tbody>
</table>