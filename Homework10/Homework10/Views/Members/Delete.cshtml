@model Member
<div class="alert alert-danger">
    <h4 class="alert-heading">حذف عضو!</h4>
    <p>
        آیا از حذف  <a asp-controller="Members" asp-action="Details" asp-route-id="@Model.Id" class="alert-link">@Model.FirstName @Model.LastName</a> اطمینان دارید؟
    </p>
    <form asp-controller="Members" asp-action="DeleteMember" method="post">
        <input type="hidden" asp-for="Id"/>
        <input type="submit" value="تایید"/>
    </form>
</div>