@using Homework10.Interfaces
@model Library
@{
    HomeworkDb _repository = new HomeworkDb();
}
<h2 class="mb-3">
    افزودن کتابخانه جدید
</h2>
<form asp-controller="Libraries" asp-action="create" method="post">
    <div class="mb-3">
        <label for="Id" class="form-label">شناسه</label>
        <input type="text" class="form-control" asp-for="Id" disabled>
    </div>
    <div class="mb-3">
        <label for="LibraryName" class="form-label">نام </label>
        <input type="text" class="form-control" asp-for="LibraryName" >
    </div>
    <div class="mb-3">
        <label for="CityId" class="form-label">شهر</label>
        <select asp-for="CityId" class="form-select" aria-label="Default select example">
            <option selected>یک شهر انتخاب کنید</option>
            @foreach(var item in _repository.Cities)
            {
                <option value=@item.Id>  @item.CityName </option>
            }
        </select>
    </div>

    
    <input type="submit" class="btn btn-success" value="ثبت">
    <a class="btn btn-light" asp-controller="Libraries" asp-action="Index">بازگشت به لیست</a>
</form>